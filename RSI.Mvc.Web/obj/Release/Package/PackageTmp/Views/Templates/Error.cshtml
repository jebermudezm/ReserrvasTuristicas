@model ErrorConfig

<style>
	#sign-wrapper { width: 500px !important; }
	.alert { padding: 5px; margin: 10px 10px; }
	#tryAgain { font: bold 18px 'Open Sans', sans-serif !important; }
</style>

<div id="sign-wrapper">
	<!-- Brand -->
	<div class="brand">
		<img src="http://@TempData["CdnSrcEnv"]/img/logo_sistema.webp" alt="brand logo" />
	</div>
	<form class="form-horizontal rounded shadow no-overflow">
		<div class="sign-header">
			<div class="form-group">
				<div class="sign-text">
					<span>@ViewBag.TitleError</span>
				</div>
			</div>
		</div>
		<div class="sign-body">
			<div class="alert alert-@ViewBag.Amb">
				<span class="alert-icon"><i class="fa fa-cloud"></i></span>
				<div class="notification-info">
					<b>Ambiente</b><br />@Model.Environment
				</div>
			</div>

			<div class="alert alert-@ViewBag.App">
				<span class="alert-icon"><i class="fa fa-list-alt"></i></span>
				<div class="notification-info">
					<b>Proviene de </b><br />@Model.ApplicationName
				</div>
			</div>

			<div class="alert alert-@ViewBag.UserAD">
				<span class="alert-icon"><i class="fa fa-user"></i></span>
				<div class="notification-info">
					<b>Dominio </b> @Model.Domain<br />
					<b>Usuario </b> @Model.UserAccount
				</div>
			</div>
		</div>
		<div class="sign-footer">
			<div class="callout callout-warning">
				@Html.Raw(Model.Message)
			</div>
			<div class="form-group">
				@Html.ActionLink("Regresar a la Página principal", "Index", "Home", new { id = "" }, new { @id = "tryAgain", @class = "btn btn-theme btn-lg btn-block no-margin rounded" })
			</div>
		</div>
	</form>
</div>