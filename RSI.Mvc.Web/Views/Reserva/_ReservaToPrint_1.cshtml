@using RSI.Mvc.Web.ViewModel
@model ReservaToPrintViewModel
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <![endif]-->
    <title>Reserva</title>
    <!-- BOOTSTRAP CORE STYLE  -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- CUSTOM STYLE  -->
    <link href="~/Content/custom-style.css" rel="stylesheet" />

    <script>
        function printdiv() {
            divPrint.style.visibility = 'hidden';
            window.print();
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="row pad-top-botm ">
            <div class="col-lg-6 col-md-6 col-sm-6 ">
                <img src="~/img/Logo.jpg" style="padding-bottom:20px;" />
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">

                <strong>
                    Reserva #: @Model.Id
                </strong>
                <br />
                <strong>
                    Mi Tierra Eventos y Excursiones
                </strong>
                <br />
                <i>Dirección :</i> Carrera 52 N°68-50
                <br />
                Itagüí
                <br />
                Antioquia, Colombia

            </div>
        </div>
        <div class="row text-center contact-info">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <hr />
                <span>
                    <strong>Destino : </strong>  @Model.Destino
                </span>
                <span>
                    <strong>Plan: </strong>  @Model.Plan
                </span>
                <span>
                    <strong>Hotel: </strong>  @Model.Hotel
                </span>
                <hr />
                <span>
                    <strong>Fecha Salida : </strong>  @Model.FechaSalida.ToString("dd/MM/yyyy")
                </span>
                <span>
                    <strong>Fecha Regreso: </strong>  @Model.FechaRegreso.ToString("dd/MM/yyyy")
                </span>
                <span>
                    <strong>Fecha Reserva: </strong>  @Model.Fecha.ToString("dd/MM/yyyy")
                </span>
                <hr />
                <hr />
                <span>
                    <strong>A Nombre de: </strong>  @Model.Cliente
                </span>
                <span>
                    <strong>Teléfono Contacto: </strong>  @Model.Telefono
                </span>
                <span>
                    <strong>Acomodación: </strong>  @Model.Acomodacion
                </span>
                <hr />
            </div>
        </div>
        <div class="row pad-top-botm client-info">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h5><strong>Pasajeros </strong></h5>
                @if (Model.ReservaIntegrantes != null)
                {
                    foreach (var item in Model.ReservaIntegrantes)
                    {
                        <Text>
                            @item.Cliente<br />
                        </Text>
                    }
                }
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h5>  <strong>Detalle</strong></h5>
                @if (Model.Lista != null)
                {
                    foreach (var item in Model.Lista.Where(x => x.tipo == "Acomodacion"))
                    {
                        <Text>
                            @item.Descripcion<br/>
                        </Text>

                    }
                }
            </div>
        </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>EL PLAN INCLUYE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @if (Model.Lista != null)
                                {
                                    foreach (var item in Model.Lista.Where(x => x.tipo == "Incluye"))
                                    {
                                        <Text>
                                        <li>
                                            @item.Descripcion
                                        </li>
                                        </Text>

                                    }
                                }
                                <br />
                                <h4><strong>Cortesía </strong></h4>
                                <h5>@Model.Cortesia</h5>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>EL PLAN NO INCLUYE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @if (Model.Lista != null)
                                {
                                    foreach (var item in Model.Lista.Where(x => x.tipo == "NoIncluye"))
                                    {
                                        <Text>
                                        <li>
                                            @item.Descripcion
                                        </li>
                                        </Text>

                                    }
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>INFORMACIÓN GENERAL PARA RESERVAR EL PLAN</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                El plan promocional genera pago inmediato<br />
                                ENVIAR SOPORTE DE PAGO CON COPIA AL WHATSAPP 314 884 48 90<br />
                                Cuenta de Ahorros Bancolombia N° 01422729557 a nombre de Mi Tierra o Jorge Edward Vargas.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
                    <hr />
                    <div class="ttl-amts">
                        <h5>  Sub-Total  : @Model.ValorBruto</h5>
                    </div>
                    <hr />
                    <div class="ttl-amts">
                        <h5>  Descuento : @Model.ValorDescuento </h5>
                    </div>
                    <hr />
                    <div class="ttl-amts">
                        <h4> <strong>Total  : @Model.ValorTotal</strong> </h4>
                    </div>
                </div>
            </div>
            @*<div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <strong> Important: </strong>
                    <ol>
                        <li>
                            

                        </li>
                        <li>
                            
                        </li>
                    </ol>
                </div>
            </div>*@
            <div id="divPrint" class="row pad-top-botm">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <hr />
                    <a href = "#" class="btn btn-primary btn-lg" onClick="printdiv();">PImprimir</a>
            @*<a href="#" class="btn btn-success btn-lg">Download In Pdf</a>*@

            </div>
        </div>
    </div>

</body>

</html>
