@model RSI.Mvc.Web.ViewModel.PagosReservaViewModel
@{
    ViewBag.Title = "Create";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header bg-success">
            <h4 class="modal-title" style="display: inline-block;">Nuevo PPago</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span class="text-white" aria-hidden="true">&times;</span>
            </button>
        </div>
        <br />
        @using (Html.BeginForm("_Create", "Pago", FormMethod.Post, new { id = "crearPagoForm" }))
        {
            @*@Html.AntiForgeryToken()*@

            <div class="modal-body">

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReservaId, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.DropDownList("ReservaId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ReservaId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @(Html.Kendo().DatePicker().Name("Fecha")//.Culture("es-ES")
                                                                .Min(DateTime.Now.AddMonths(-2)).Max(DateTime.Now.AddYears(2))
                                                                .HtmlAttributes(new { style = "width: 100%", title = "datepicker" }))
                            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Observacion, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-7">
                            @Html.TextAreaFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <br />
                <div class="modal-footer" style="background: white; margin: 0; padding: 0;">
                    <br />
                    <button type="button" onclick="ajaxPostCrearPago('@Url.Action("_Create", "Pago")')" class="btn btn-success" style='margin: 10px 0 20px 0'><i class='fa fa-check' aria-hidden='true'></i> Guardar</button>
                    <button type="button" class="btn btn-default" style='margin: 10px 0 20px 0' data-dismiss="modal"><i class='fa fa-close' aria-hidden='true'></i>Cancelar</button>
                    <br />
                </div>
            </div>

        }
    </div>
</div>